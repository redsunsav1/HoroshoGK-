# Email settings for booking notifications
# Copy this file to .env and fill in your values

# SMTP server settings
# For Yandex: smtp.yandex.ru, port 465
# For Mail.ru: smtp.mail.ru, port 465
# For Gmail: smtp.gmail.com, port 465
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=465

# Your email account credentials
# Use app password, not regular password!
# Yandex: https://id.yandex.ru/security/app-passwords
# Gmail: https://myaccount.google.com/apppasswords
SMTP_USER=your-email@yandex.ru
SMTP_PASS=your-app-password

# Email address to receive booking notifications
BOOKING_EMAIL=manager@example.com
